<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <View
        android:id="@+id/cruellaImage"
        android:layout_width="86dp"
        android:layout_height="129dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="258dp"
        android:background="@drawable/cruella"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cruellaTitle"
        style="@style/titleFilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="67dp"
        android:text="@string/cruella"
        app:layout_constraintStart_toEndOf="@+id/cruellaImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/descriptionThemeCruella"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:text="@string/descriptionThemeCruella"
        style="@style/descriptionTheme"
        app:layout_constraintStart_toEndOf="@id/cruellaImage"
        app:layout_constraintTop_toBottomOf="@+id/cruellaTitle" />

    <TextView
        android:id="@+id/durationCruella"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:gravity="center_vertical"
        android:text="@string/durationCruella"
        style="@style/duration"
        app:layout_constraintStart_toEndOf="@+id/cruellaImage"
        app:layout_constraintTop_toBottomOf="@+id/descriptionThemeCruella" />

</androidx.constraintlayout.widget.ConstraintLayout>